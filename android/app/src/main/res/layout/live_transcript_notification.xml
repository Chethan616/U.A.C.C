<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp"
    android:minHeight="80dp">

    <!-- Header row with app icon and call status -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/app_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="UACC Live Transcript"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/call_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:30"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:layout_marginStart="8dp" />

        <View
            android:id="@+id/live_indicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="#FF4444"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Main transcript content -->
    <TextView
        android:id="@+id/transcript_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Listening for speech..."
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:lineSpacingExtra="2dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginBottom="8dp" />

    <!-- Action buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <TextView
            android:id="@+id/action_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â¸ Pause"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:padding="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/action_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ‘ View Full"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="12sp"
            android:padding="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless" />

    </LinearLayout>

</LinearLayout>