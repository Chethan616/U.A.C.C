<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="20dp">

    <!-- Header with app info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageView
            android:id="@+id/app_icon_expanded"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/app_name_expanded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UACC Live Transcript"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/call_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In call • 2:34 duration"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />

        </LinearLayout>

        <View
            android:id="@+id/live_indicator_expanded"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="#FF4444" />

    </LinearLayout>

    <!-- Full transcript content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/full_transcript_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to the call. How may I help you today?\n\nI'm calling regarding the proposal we discussed yesterday. Could you please provide an update on the project timeline?\n\nSure, let me check the latest status..."
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            android:scrollbars="vertical" />

    </ScrollView>

    <!-- Action buttons row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/action_pause_expanded"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="⏸ Pause"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:textAlignment="center"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground" />

        <TextView
            android:id="@+id/action_save_expanded"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="💾 Save"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:textAlignment="center"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground" />

        <TextView
            android:id="@+id/action_open_expanded"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="📱 Open App"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="14sp"
            android:textAlignment="center"
            android:padding="12dp"
            android:textStyle="bold"
            android:background="?android:attr/selectableItemBackground" />

    </LinearLayout>

</LinearLayout>